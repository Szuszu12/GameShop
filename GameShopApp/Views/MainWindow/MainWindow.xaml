<Window x:Class="GameShopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameShopApp"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid Background="AliceBlue">
        <Label Content="GAMEDLE" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" FontWeight="Bold" FontSize="24"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Kategorie" Click="Button_Click_1"/>
            <Button Content="Klienci" Click="Button_Client_Click"/>
            <Button Content="Gry" Click="Button_Game_Click"/>
            <Button Content="Zamówienia" Click="Button_Order_Click"/>
            <Button Content="Producenci" Click="Button_Producer_Click"/>
        </StackPanel>
    </Grid>
</Window>
