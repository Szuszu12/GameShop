<Window x:Class="GameShopApp.Views.Category.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameShopApp.Views.Category"
        mc:Ignorable="d"
         Title="Edit Category" Height="140" Width="400">

    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Nazwa Kategorii:" Margin="0,10,0,10" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBox x:Name="categoryNameTextBox" Width="200" Height="30" Margin="0,0,0,5" VerticalContentAlignment="Center" FontSize="16"/>
            <Button Content="Zapisz zmiany" Click="SaveChangesButton_Click" Margin="0,10,0,0" VerticalContentAlignment="Center" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>